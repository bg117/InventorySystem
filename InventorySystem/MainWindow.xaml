<mah:MetroWindow x:Class="InventorySystem.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:views="clr-namespace:InventorySystem.Views"
                 xmlns:viewModels="clr-namespace:InventorySystem.ViewModels"
                 mc:Ignorable="d"
                 Height="450" Width="800" TitleCharacterCasing="Normal">
    <mah:MetroWindow.DataContext>
        <viewModels:MainWindowViewModel />
    </mah:MetroWindow.DataContext>
    <!-- Base title: Inventory System -->
    <!-- Add - {title} if SpreadsheetViewModel.Instance.FilePath is not null -->
    <!-- Add * if either InventorySingletonViewModel.Instance.IsChanged or TransactionsSingletonViewModel.Instance.IsChanged is true -->
    <mah:MetroWindow.Title>
        <MultiBinding StringFormat="Inventory System {0} {1}">
            <Binding Path="FilePathDisplay" UpdateSourceTrigger="PropertyChanged" />
            <Binding Path="ChangedDisplay" UpdateSourceTrigger="PropertyChanged" />
        </MultiBinding>
    </mah:MetroWindow.Title>
    <views:MainView />
</mah:MetroWindow>